# Docker環境用Stripe統合テスト設定
APP_HOST=http://localhost
APP_PORT=8000
DEBUG_PORT=5678
DEBUG=true

# データベース設定（テスト用）
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=test_stripe_integration

DJANGO_SETTINGS_MODULE=macching_app.settings.test_integration
DJANGO_SECRET_KEY=test-secret-key-for-docker-stripe-testing

# Docker settings
DOCKER_ENV=True
DOCKER_SERVICE_NAME=django

# SpeechBrain無効化（テスト高速化）
SPEECHBRAIN_DISABLE_QUIRKS=True
SPEECHBRAIN_DEV_MODE=True

# Stripe Test Keys
STRIPE_PUBLISHABLE_KEY=secret
STRIPE_SECRET_KEY=secret
STRIPE_WEBHOOK_SECRET=secret
STRIPE_WEBHOOK_URL=secret

STRIPE_TEST_MODE=True
