# Stripe Test Environment Configuration
# 本番環境には影響しません - テスト専用設定

# Django設定
DEBUG=True
ENVIRONMENT=test
SECRET_KEY=test-secret-key-for-stripe-integration-testing
DJANGO_SECRET_KEY=test-secret-key-for-stripe-integration-testing

# Database settings for test
DATABASE_NAME=test_db
DATABASE_USER=test_user
DATABASE_PASSWORD=test_password
DATABASE_HOST=localhost
DATABASE_PORT=3306

# Stripe Test Keys (テストキー - 本番データにアクセスしません)
STRIPE_PUBLISHABLE_KEY=secret
STRIPE_SECRET_KEY=secret
STRIPE_WEBHOOK_SECRET=secret

# データベース (テスト用SQLite)
DATABASE_URL=sqlite:///db_test.sqlite3

# Webhook URL (ngrok使用時に更新)
STRIPE_WEBHOOK_URL=secret

# テストモード設定
STRIPE_TEST_MODE=True
TESTING_INTEGRATION=True

# Webhook環境用の追加設定
NEXT_JS_HOST=http://localhost
NEXT_JS_PORT=3000

# openaiの設定
OPENAI_API_KEY=secret
